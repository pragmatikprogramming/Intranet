<style type="text/css">
    .ui-accordion {
        line-height: 20px;
    }

    .ui-accordion-content {
        margin-left: 25px;
        background-color: #ffffff;
    }
    .ui-accordion-header{
        background-color: #ccc;
    }
</style>
<style type="text/css">
    h3:hover {
          cursor: pointer;
      }
</style>
 

<div id="accordion">
@foreach (var question in Model)
{
    <h3 style="color: black; font-size: 14px; color: #e98c24;">@question.FaqQuestion</h3>
    <div>
        @Html.Raw(System.Web.HttpUtility.HtmlDecode(question.FaqAnswer))
    </div>
}
</div>

