@{
    ViewBag.Title = "DisplayChildren";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h2>Children</h2>
</div>
<script type="text/javascript">
    var myID = 0;

    function doWork(id)
    {
        myID = id;
    }

</script>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="btn-toolbar">
                <a href="/List/AddChild/@ViewBag.ListId"><button class="btn btn-primary"><i class="icon-plus"></i> New Child</button></a>&nbsp;&nbsp;&nbsp;<a href="/List/Index"><button class="btn btn-primary"><i class="icon-plus"></i> Back to Lists</button></a>
                <div class="btn-group">
                </div>
            </div>
            <div class="well">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Child Name</th>
                            <th style="width: 36px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null)
                        { 
                            foreach (var child in Model)
                            {
                                <tr>
                                    <td>@child.Label</td>
                                    <td>
                                        <a href="/List/EditChild/@child.Id"><i class="icon-pencil"></i></a>
                                        <a href="#myModal" role="button" data-toggle="modal" id="1" onclick="doWork(@child.Id);"><i class="icon-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>


            </div>
            <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                    <h3 id="myModalLabel">Delete Confirmation</h3>
                </div>
                <div class="modal-body">
                    <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the Child?</p>
                </div>

                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    <button class="btn btn-danger" data-dismiss="modal" onclick="document.location.href ='/List/DeleteChild/' + myID;">Delete</button>
                </div>
            </div>
        </div>
    </div>
