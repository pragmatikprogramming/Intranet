@{
    ViewBag.Title = "EditList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h1 class="page-title">Edit List</h1>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="formcontainer">
            <div style="line-height: 30px;">&nbsp;</div>
            <div style="color: red">@Html.ValidationSummary()</div>

            <div class="formlabel">&nbsp;</div>
            <div class="formfield"><a href="/List/Index"><button class="btn btn-primary"><i class="icon-reply"></i> Cancel</button></a></div>
            <div class="clear">&nbsp;</div>
            <div style="line-height: 30px;">&nbsp;</div>

            <form action="/List/EditList" method="post" id="listEdit">
                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                <div class="formlabel">List Name:</div>
                <div class="formfield"><input type="text" name="ListName" id="ListName" value="@Model.ListName" /></div>
                <div class="clear">&nbsp;</div>

                <div class="formlabel">List Type:</div>
                <div class="formfield">
                    <select name="ListType">
                        <option value="1"> Forms </option>
                    </select>
                </div>
                <div class="clear">&nbsp;</div>

                <div style="line-height: 30px;">&nbsp;</div>
                <div class="formlabel">&nbsp;</div>
                <div class="formfield"><button form="listEdit" class="btn btn-primary"><i class="icon-save"></i> Save</button></div>
                <div class="clear">&nbsp;</div>
            </form>
        </div>
    </div>
