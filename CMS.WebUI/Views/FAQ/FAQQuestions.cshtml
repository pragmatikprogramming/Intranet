@model IEnumerable<CMS.Domain.Entities.FAQQuestions>
@{
    ViewBag.Title = "Admin - Manage FAQ Questions";
    ViewBag.Name = HttpContext.Current.Session["Name"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h2>FAQ Questions</h2>
</div>
<script type="text/javascript">
    var myID = 0;

    function doWork(id)
    {
        myID = id;
    }

</script>
<div class="container-fluid">
<div class="row-fluid">  
    <div class="row-fluid">            
        <div class="btn-toolbar">
            <a href="/FAQ/FAQQuestionAdd/@ViewBag.FAQID"><button class="btn btn-primary"><i class="icon-plus"></i> New FAQ Question</button></a>&nbsp;&nbsp;
            <a href="/FAQ"><button class="btn btn-primary"><i class="icon-reply"></i> Back</button></a>
            <div class="btn-group">
            </div>
        </div>
        <div class="well">

    <table class="table">
      <thead>
        <tr>
          <th>FAQ Questions</th>
          <th style="width: 13px;"></th>
            <th style="width: 13px;"></th>
            <th style="width: 13px;"></th>
            <th style="width: 13px;"></th>
        </tr>
      </thead>
      <tbody>
          @foreach (var faq in Model)
          {
                <tr>
                    <td>@faq.FaqQuestion</td>
                    <td><a href="/FAQ/sortUp/@faq.QID"><i class="icon-arrow-up" title="Preview" alt="Preview"></i></a></td>
                    <td><a href="/FAQ/sortDown/@faq.QID"><i class="icon-arrow-down" title="Preview" alt="Preview"></i></a></td>
                    <td><a href="/FAQ/FAQQuestionEdit/@faq.QID"><i class="icon-pencil"></i></a></td>
                    <td><a href="#myModal" role="button" data-toggle="modal" id="1" onclick="doWork(@faq.QID);"><i class="icon-remove"></i></a></td>
                </tr>
          }
      </tbody>
    </table>


        </div>
        <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h3 id="myModalLabel">Delete Confirmation</h3>
            </div>
            <div class="modal-body">
                <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the FAQ Question?</p>
            </div>

            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button class="btn btn-danger" data-dismiss="modal" onclick="document.location.href ='/FAQ/FAQQuestionDelete/@ViewBag.FAQID/' + myID;">Delete</button>
            </div>
        </div>
    </div>
</div>