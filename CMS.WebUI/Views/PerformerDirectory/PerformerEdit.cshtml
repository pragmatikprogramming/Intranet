@{
    ViewBag.Title = "PerformerEdit";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div style="line-height: 30px;">&nbsp;</div>
<div style="padding-left: 45px; padding-top: 20px">
    <h2>Edit Performer</h2>

    <form action="/PerformerDirectory/PerformerEdit" method="post" id="performerEdit">
        <input type="hidden" name="Id" id="Id" value="@Model.Id" />

        <div class="formlabel">First Name:</div>
        <div class="formfield"><input type="text" name="FirstName" id="FirstName" value="@Model.FirstName" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Last Name:</div>
        <div class="formfield"><input type="text" name="LastName" id="LastName" value="@Model.LastName" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Address:</div>
        <div class="formfield"><input type="text" name="Address" id="Address" value="@Model.Address" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Phone:</div>
        <div class="formfield"><input type="text" name="Phone" id="Phone" value="@Model.Phone" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Fax:</div>
        <div class="formfield"><input type="text" name="Fax" id="Fax" value="@Model.Fax" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Email:</div>
        <div class="formfield"><input type="text" name="Email" id="Email" value="@Model.Email" /></div>
        <div class="clear">&nbsp;</div>

        <div class="formlabel">Website:</div>
        <div class="formfield"><input type="text" name="Website" id="Website" value="@Model.Website" /></div>
        <div class="clear">&nbsp;</div>

        <div style="line-height: 30px;">&nbsp;</div>
        <div class="formlabel">&nbsp;</div>
        <div class="formfield"><button form="performerEdit" class="btn btn-primary"><i class="icon-save"></i> Save</button></div>
        <div class="clear">&nbsp;</div>
    </form>
</div>