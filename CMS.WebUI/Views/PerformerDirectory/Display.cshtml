@{
    Layout = null;
}

<div style="line-height: 30px;">&nbsp;</div>
<a href="/PerformerDirectory/PerformerAdd">Add Performer</a> | <a href="/PerformerDirectory/ActAdd">Add Act</a>
<div style="line-height: 30px;">&nbsp;</div>
<table class="directory-table">
    <thead>
        <tr>
            <th>First Name<a href="/PerformerDirectory/Filter/1/desc" ><img src="/Content/images/arrow-none.gif" width="19" height="10"></a></th>
            <th>Last Name<a href="/PerformerDirectory/Filter/2/desc" ><img src="/Content/images/arrow-none.gif" width="19" height="10"></a></th>
            <th>Average Rating<img src="/Content/images/arrow-none.gif" width="19" height="10"></th>
            <th>Acts</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var performer in Model)
        {
            <tr>
                <td><a href="/PerformerDirectory/DisplayPerformer/@performer.Id">@performer.FirstName</a></td>
                <td><a href="/PerformerDirectory/DisplayPerformer/@performer.Id">@performer.LastName</a></td>
                <td>@Html.Action("getAverageRatingPerformer", "PerformerDirectory", new { id = performer.Id })  @Html.Action("getNumReviewsPerformer", "PerformerDirectory", new { id = performer.Id })</td>
                <td>@Html.Action("getActs", "PerformerDirectory", new { id = performer.Id })</td>
            </tr>   
        }
    </tbody>
</table>
