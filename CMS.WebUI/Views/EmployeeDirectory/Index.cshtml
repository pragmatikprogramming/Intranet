@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h2>Employee Directory</h2>
</div>
<script type="text/javascript">
    var myID = 0;

    function doWork(id) {
        myID = id;
    }

</script>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="btn-toolbar">
                <a href="/EmployeeDirectory/AddEmployee/"><button class="btn btn-primary"><i class="icon-plus"></i> Add Employee</button></a>
                <div class="btn-group">

                </div>
            </div>
            <div style="color: red">@Html.ValidationSummary()</div>
            <div class="well">
                <table class="table">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th>Job Title</th>
                            <th style="width: 13px; text-align: right;">&nbsp;</th>
                            <th style="width: 13px; text-align: right;">&nbsp;</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach(var employee in Model)
                        {
                            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Phone</td>
                                <td>@employee.Email</td>
                                <td>@employee.Location</td>
                                <td>@employee.JobTitle</td>
                                <td><a href="/EmployeeDirectory/EditEmployee/@employee.Id"><i class="icon-pencil" title="Edit" alt="Edit"></i></a></td>
                                <td><a href="#myModal" role="button" data-toggle="modal" id="1" onclick="doWork(@employee.Id);"><i class="icon-remove" title="Delete" alt="Delete"></i></a></td>
                            </tr>
                        }




                    </tbody>
                </table>
            </div>
            <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                    <h3 id="myModalLabel">Delete Confirmation</h3>
                </div>
                <div class="modal-body">
                    <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the Employee?</p>
                </div>

                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    <button class="btn btn-danger" data-dismiss="modal" onclick="document.location.href ='/EmployeeDirectory/DeleteEmployee/' + myID;">Delete</button>
                </div>
            </div>
        </div>
    </div>
