<input type="hidden" value="@ViewBag.PageType" name="PageType" />
<div class="formlabel">FAQs:</div>
<div class="formfield">
    <select name="PageTypeId">
        @foreach (var mFAQ in Model)
        {
            <option value="@mFAQ.FaqID"
                @if(ViewBag.m_Page.PageTypeId == mFAQ.FaqID)
                {
                    @: selected="selected"
                }
            >@mFAQ.FaqName</option>
        }
    </select>
</div>
<div class="clear">&nbsp;</div>

<div class="formlabel">Template:</div>
<div class="formfield">
    <select name="TemplateId" aria-readonly="true">
        @if (ViewBag.m_Page.TemplateId == 15)
        {
            <option value="15" selected="selected">Home - Full Width</option>
        }
        else
        {
            <option value="15">Home - Full Width</option>
        }
        @if (ViewBag.m_Page.TemplateId == 5)
        {
            <option value="5" selected="selected">Home - Interior</option>
        }
        else
        {
            <option value="5" >Home - Interior</option>
        }
        @if (ViewBag.m_Page.TemplateId == 9)
        {
            <option value="9" selected="selected">Home - With Sub Menu</option>
        }
        else
        {
            <option value="9">Home - With Sub Menu</option>
        }
        @if (ViewBag.m_Page.TemplateId == 7)
        {
            <option value="7" selected="selected">Teens</option>
        }
        else
        {
            <option value="7" >Teens</option>
        }
    </select>
</div>
<div class="clear">&nbsp;</div>
