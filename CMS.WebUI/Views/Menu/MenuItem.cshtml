@{
    ViewBag.Title = "Menu Item";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header">
    <h2>Menu Items</h2>
</div>
<script type="text/javascript">
    var myID = 0;

    function doWork(id)
    {
        myID = id;
    }

</script>
<div class="container-fluid">  
<div class="row-fluid">  
    <div class="row-fluid">            
        <div class="btn-toolbar">
            <a href="/Menu/AddMenuItem/@ViewBag.ParentId"><button class="btn btn-primary"><i class="icon-plus"></i> New Menu Item</button></a>
            <div class="btn-group">
            </div>
        </div>
        <div class="well">

    <table class="table">
      <thead>
        <tr>
          <th>Menu Item Name</th>
          <th style="width: 13px;"></th>
          <th style="width: 13px;"></th>
          <th style="width: 13px;"></th>
          <th style="width: 13px;"></th>
        </tr>
      </thead>
      <tbody>
          @foreach (var menuItem in Model)
          {
                <tr>
                    <td>@menuItem.MenuItemName</td>
                    <td><a href="/Menu/sortUp/@menuItem.Id"><i class="icon-arrow-up" title="Sort Up" alt="Sort Up"></i></a></td>
                    <td><a href="/Menu/sortDown/@menuItem.Id"><i class="icon-arrow-down" title="Sort Down" alt="Sort Down"></i></a></td>
                    <td><a href="/Menu/EditMenuItem/@menuItem.Id"><i class="icon-pencil"></i></a></td>
                    <td><a href="#myModal" role="button" data-toggle="modal" id="1" onclick="doWork(@menuItem.Id);"><i class="icon-remove"></i></a></td>
                </tr>
          }
      </tbody>
    </table>


        </div>
        <!--<div class="pagination">
            <ul>
                <li><a href="#">Prev</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">Next</a></li>
            </ul>
        </div>-->
        <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h3 id="myModalLabel">Delete Confirmation</h3>
            </div>
            <div class="modal-body">
                <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the Menu Item?</p>
            </div>

            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button class="btn btn-danger" data-dismiss="modal" onclick="document.location.href ='/Menu/DeleteMenuItem/' + myID;">Delete</button>
            </div>
        </div>
    </div>
</div>

